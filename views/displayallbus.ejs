<html>
  <style>
    .maincontainer {
      background: #dbbe02;
      width: auto;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .box {
      width: 70%;
      height: 70%;
      background: #d9cd7f;
      justify-content: center;
      align-items: center;
      border-radius: 20px;
      padding: 15px;
    }
    .heading {
      font-size: 26px;
      letter-spacing: 2px;
      font-weight: bold;
      color: #002265;
      display: flex;
      flex-direction: row;
    }
    .daysstyle {
      display: flex;
      flex-direction: row;
      justify-content: space-evenly;
    }
    .buttonStyle {
      width: 100%;
    }
  </style>
  <html>
    <head>
      <title>Bus Interface</title>
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
        crossorigin="anonymous"
      />
    </head>

    <body>
      <div class="maincontainer">
        <div class="box">
          <div class="heading">
          <a href="/bus/businterface"><img src="/images/addrecord.png" width="30"></a>
            <img src="/images/busicon1.png"width="80" height="70">
                         <b><i> Bus Interface </i></b>
                          </div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Bus Name</th>
                <th scope="col">Days/<br />Seats</th>
                <th scope="col">Source City</th>
                <th scope="col">Destination City</th>
                <th scope="col">Company</th>
                <th scope="col">Logo</th>
                <th scope="col">Edit/Delete</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <%data.map((item)=>{%>

                <th scope="row">
                  <%=item.busname%>
                  <%=item.busid %>
                  <br />
                  <%=item.bustype%>
                </th>
                <td>
                  Seats:<%=item.totalseats%>
                  <br />
                  <%=item.days%>
                </td>
                <td>
                  <%=item.source%>
                  <br />
                  <%=item.departuretime%>
                </td>
                <td>
                  <%=item.destination%>
                  <br />
                  <%=item.arrivaltime%>
                 
                </td>
                <td><%=item.company%></td>
                <td><a href="/bus/searchbyidforimage?bid=<%=item.busid%>"> <img src="/images/<%=item.logo %>" width="30"/></a></td>
                <td>
                  <a href="/bus/searchbyid?bid=<%=item.busid %>">
                    Edit/Delete
                  </a>
                </td>
                
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </html> 